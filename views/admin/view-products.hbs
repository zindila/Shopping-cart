<section>
    <div class="container">
        <div class="row mt-5">
            <a href="/admin/add-product" class="btn btn-success ml-auto">Add Product</a>
        </div>
        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th>Image</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
      <th scope="row">1</th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
      <td><img  style="width: 50px;height:50px"src="/product-images/{{_id}}.jpg" alt=""></td>
      <td>
        
        <a href="/admin/edit-product/{{_id}}" class="btn btn-primary">Edit</a>
        <a href="/admin/delete-product/{{_id}}" class="btn btn-danger"onclick="return confirm('Are you want to delete {{this.Name}}?')">Delete</a> 
        </td>
    </tr>
    {{/each}}
    
  </tbody>
</table>
    </div>
</section>